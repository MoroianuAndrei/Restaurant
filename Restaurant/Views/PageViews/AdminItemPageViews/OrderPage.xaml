<Page x:Class="Restaurant.Views.AdminItemPageViews.OrderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:objectPageViewModels="clr-namespace:Restaurant.ViewModels.PageViewModels.AdminPageViewModels.ObjectPageViewModels"
             mc:Ignorable="d"
             Title="OrderPage">
    <Page.DataContext>
        <objectPageViewModels:OrderPageViewModel/>
    </Page.DataContext>
    <DockPanel>
        <Grid
            DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ui:TextBlock
                Text="Orders" 
                Foreground="White"
                FontTypography="Title"
                Padding="16 24"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 24 0">
                <ui:ToggleSwitch
                    Margin="0 0 16 0"
                    Content="Active Orders Only"
                    IsChecked="{Binding ShowActiveOrdersOnly, Mode=TwoWay}"/>
            </StackPanel>
        </Grid>

        <ui:DataGrid
            ItemsSource="{Binding Orders}"
            Margin="12 0 12 12"
            Padding="4 12 12 12"
            GridLinesVisibility="All"
            AutoGenerateColumns="False"
            IsReadOnly="True">
            <ui:DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1 "/>
                    <Setter Property="BorderBrush" Value="DarkGray"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </ui:DataGrid.ColumnHeaderStyle>
            <ui:DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type DataGridCell}">
                                <Grid>
                                    <ContentPresenter
                                        VerticalAlignment="Center" 
                                        Margin="8"/>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="FontSize" Value="16"/>
                </Style>
            </ui:DataGrid.CellStyle>
            <ui:DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Order Date" 
                    Binding="{Binding OrderDate, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="Order Code" 
                    Binding="{Binding OrderCode}"
                    Width="Auto"/>
                <DataGridTemplateColumn 
                    Header="Items" 
                    Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding OrderItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Quantity}"/>
                                            <Run Text="x"/>
                                            <Run Text="{Binding Name}"/>
                                            <Run Text="("/>
                                            <Run Text="{Binding UnitPrice, StringFormat=C}"/>
                                            <Run Text=")"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn 
                    Header="Food Cost" 
                    Binding="{Binding SubtotalAmount, StringFormat=C}"
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="Shipping Cost" 
                    Binding="{Binding ShippingCost, StringFormat=C}"
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="Total Cost" 
                    Binding="{Binding TotalAmount, StringFormat=C}"
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="Est. Delivery Time" 
                    Binding="{Binding EstimatedDeliveryTime, StringFormat={}{0:HH:mm}}"
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="Status" 
                    Binding="{Binding Status}"
                    Width="Auto"/>
                <DataGridTemplateColumn 
                    Header="Details" 
                    Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ui:Button 
                                Content="View Details" 
                                Margin="4" 
                                Icon="{ui:SymbolIcon Search24}" 
                                Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type Page}}}"
                                CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </DockPanel>
</Page>