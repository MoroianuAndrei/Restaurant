<Page x:Class="Restaurant.Views.PageViews.SignInPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pageViewModels="clr-namespace:Restaurant.ViewModels.PageViewModels"
        mc:Ignorable="d"
        Title="SignInPage">
    <Page.DataContext>
        <pageViewModels:SignInPageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ui:Image
                Grid.Column="0" 
                Source="../../Assets/Images/store_management.png" 
                Width="300"
                Margin="0 0 64 0" 
                HorizontalAlignment="Right"/>
        <StackPanel 
                Grid.Column="1"
                Orientation="Vertical" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Margin="16 0 0 0">
            <ui:TextBlock 
                    Text="Create Account" 
                    FontSize="24" 
                    FontWeight="Bold" 
                    Foreground="White"
                    Width="396"
                    TextAlignment="Center"
                    Margin="0,0,0,32"/>
            <ui:TextBox
                    Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PlaceholderText="First Name"/>
            <ui:TextBox
                    Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PlaceholderText="Last Name"/>
            <ui:TextBox
                    Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PlaceholderText="Email"/>
            <ui:TextBox
                    Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PlaceholderText="Phone"/>
            <ui:TextBox
                    Text="{Binding DeliveryAddress, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PlaceholderText="Delivery Address"/>
            <ui:PasswordBox
                    Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PasswordChar="●"
                    PlaceholderText="Password"/>
            <ui:PasswordBox
                    Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Width="396"
                    Margin="0,0,0,12"
                    PlaceholderEnabled="True"
                    PasswordChar="●"
                    PlaceholderText="Confirm Password"/>
            <ui:InfoBar 
                    Title="Error" 
                    Message="{Binding ErrorMessage}" 
                    IsOpen="{Binding HasError}"
                    Severity="Error"
                    Margin="0,0,0,12" />
            <ui:Button
                    Content="Sign In"
                    Width="396"
                    Appearance="Primary"
                    HorizontalAlignment="Center"
                    Command="{Binding SignInCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"
                    Margin="0,0,0,12"/>
            <ui:Button
                    Content="Back to Login"
                    Width="396"
                    Appearance="Secondary"
                    HorizontalAlignment="Center"
                    Command="{Binding BackToLoginCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Page}}"/>
        </StackPanel>
    </Grid>
</Page>